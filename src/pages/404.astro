---
import DefaultLayout from '../layouts/DefaultLayout.astro'
---

<DefaultLayout title="404 - Page Not Found">
  <section class="my-12">
    <div class="container">
      <h1>404</h1>
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <p class="text-2xl">
        Looks like this page is missing, like a block that got removed. Let's get you back on track!
      </p>
      <a class="button" href="/">Return to the main page</a>
    </div>
  </section>
</DefaultLayout>

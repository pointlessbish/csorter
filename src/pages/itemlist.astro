---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { Accordion, AccordionItem } from 'accessible-astro-components'
---

<DefaultLayout title="Minecraft Stackable Items">
  <section class="my-12">
    <div class="space-content container">
      <h1>Minecraft Stackable Items</h1>
      <p class="text-2xl">
        This page lists stackable Minecraft items organized into categories for better readability, with an indication
        of whether each item is supported or unsupported in terms of stackability.
      </p>
    </div>
  </section>

  <section class="mb-12 mt-32">
    <div class="container">
      <Accordion>
        <!-- Stackable Items by Biome/World -->
        <AccordionItem header="Stackable Items by Biome/World">
          <h2>Plants</h2>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                  >Biome/World</th
                >
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Supported</th
                >
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                  >Unsupported</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Snow Biome</td>
                <td class="whitespace-nowrap px-6 py-4">Snow, Snow Blocks, Packed Ice, Ice, Blue Ice</td>
                <td class="whitespace-nowrap px-6 py-4"></td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Other</td>
                <td class="whitespace-nowrap px-6 py-4">Powder Snow</td>
                <td class="whitespace-nowrap px-6 py-4"></td>
              </tr>
            </tbody>
          </table>
        </AccordionItem>

        <!-- Dyed Items -->
        <AccordionItem header="Dyed Items">
          <h2>Wool</h2>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Color</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Item</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Supported</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr>
                <td class="whitespace-nowrap px-6 py-4">White</td>
                <td class="whitespace-nowrap px-6 py-4">White Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Red</td>
                <td class="whitespace-nowrap px-6 py-4">Red Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Green</td>
                <td class="whitespace-nowrap px-6 py-4">Green Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Blue</td>
                <td class="whitespace-nowrap px-6 py-4">Blue Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Yellow</td>
                <td class="whitespace-nowrap px-6 py-4">Yellow Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Light Gray</td>
                <td class="whitespace-nowrap px-6 py-4">Light Gray Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dark Gray</td>
                <td class="whitespace-nowrap px-6 py-4">Dark Gray Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Black</td>
                <td class="whitespace-nowrap px-6 py-4">Black Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Brown</td>
                <td class="whitespace-nowrap px-6 py-4">Brown Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Pink</td>
                <td class="whitespace-nowrap px-6 py-4">Pink Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Purple</td>
                <td class="whitespace-nowrap px-6 py-4">Purple Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Cyan</td>
                <td class="whitespace-nowrap px-6 py-4">Cyan Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Light Blue</td>
                <td class="whitespace-nowrap px-6 py-4">Light Blue Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Orange</td>
                <td class="whitespace-nowrap px-6 py-4">Orange Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Gray</td>
                <td class="whitespace-nowrap px-6 py-4">Gray Wool</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
            </tbody>
          </table>

          <h2>Other Dyed Items</h2>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Item</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Supported</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dyed Glass</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dyed Glass Panes</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dyed Concrete</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dyed Concrete Powder</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
              <tr>
                <td class="whitespace-nowrap px-6 py-4">Dyed Terracotta</td>
                <td class="whitespace-nowrap px-6 py-4">✔</td>
              </tr>
            </tbody>
          </table>
        </AccordionItem>

        <!-- Unsupported Items -->
        <AccordionItem header="Unsupported Items">
          <p>Currently, there are no unsupported items listed.</p>
        </AccordionItem>
      </Accordion>
    </div>
  </section>
</DefaultLayout>
